{
  "name": "server",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "docker exec -it bun-server bunx drizzle-kit migrate",
    "db:seed": "docker exec -it bun-server bun run src/infrastructure/persistence/drizzle/seed.ts",
    "db:query": "docker exec -it bun-server bun run src/infrastructure/persistence/drizzle/query.ts",
    "db:studio": "docker exec -it bun-server bunx drizzle-kit studio --host localhost",
    "db:command": "docker exec -it marketplace_db psql -U postgres -d online_marketplace"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/pg": "^8.16.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "drizzle-kit": "^0.31.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^3.0.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "nodemon": "^3.1.11",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.4"
  }
}
